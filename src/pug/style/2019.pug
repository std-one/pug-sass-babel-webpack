extends ../_tmpl/base

block param
	- var siteTitle = "町田れいじ Official Website";
	- var description = "喜ぶ人と共に喜び、泣く人と共に泣く「町田零二」（1980年生まれ・無所属）が大和市政に新しいスタイルを提案します！";
	- var keywords = "町田れいじ,町田零二,大和市,政治,市議会議員";
	- var pageTitle = "3期目 政策達成報告";
	- var url = "style/2019.html";
	- var bodyID = "";

block contents
	#style.c-area-common.p-area-style.-lower
		.l-wrap

			.c-area-common__back(data-scroll): a.c-btn-back(href="/") 戻る

			.c-nav-lower(data-scroll)
				h3.c-nav-lower__headline 政策達成報告
				ul
					li: a.is-active(href="/style/2019.html")
						| 3期目
						span &nbsp;政策達成報告
					li: a(href="/style/2015.html")
						| 2期目
						span &nbsp;政策達成報告
					li: a(href="/style/2011.html")
						| 1期目
						span &nbsp;政策達成報告

			.c-group-header(data-scroll)
				h2.c-group-header__headline 3期目 政策達成報告
				p.c-group-header__text
					| 少子高齢・人口減少社会に備えた将来持続性のある町づくり。そのキーワードは「まち」と「ひと」。
					br
					| こんな時代だからこそ、一緒に生きれば未来が明るい。
					br
					| みんなが「ここにいたい」「ここにいてもいいんだ」と思える社会を実現する「やまとスタイル2019」

			.p-area-style__unit
				h3.p-area-style__headline-main(data-scroll) ひと

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 教育改革
					p.p-area-style__lead 「未来を担うこどもたちが、将来良き社会人として自立できる教育をめざします」
					ul.p-area-style__list
						li 新学習指導要領への対応
						li 特別支援教育の充実
						li 学力・体力の向上
						li 地域の青少年活動の支援
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 学習インフラを整えるGIGAスクール構想をベースとして、小学校では2020年度、中学校では2021年度からスタートした新学習指導要領は、小学校で外国語学習やプログラミング教育が始まるなど過去最大の改訂とも言われてきました。大和市では先行して対応を進めてきましたが、コロナ禍への対応などが重なり、対応状況の評価はまだこれからといった状態です。今後は学校におけるアフターコロナの在り方と併せて対応を注視していきたいと思います。特別支援教育については特別支援教育センター「アンダンテ」の設置後、教員向けの専門的研修の実施や支援・相談機能の強化を通じて充実が図られ、各学校に配置される特別支援教育ヘルパーも4年間で9人増員されました。学力・体力については依然として全国平均を下回っているものの、一部で改善傾向も見られます。地域の青少年活動については、こちらもコロナ禍の影響により多くの団体の活動が制限されたことから、具体的な支援策についても進めることができませんでした。

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 子育て支援
					p.p-area-style__lead 「すべてのこどもたちの育ちを支え、親子が幸せに暮らせる政策を進めます」
					ul.p-area-style__list
						li 保育所待機児童ゼロ
						li 放課後３事業（放課後児童クラブ・放課後ひろば・放課後寺子屋やまと）の充実
						li 切れ目のない発達支援
						li 一時預かりなど多様な保育の充実
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 認可保育所や小規模保育所などの数はこの4年間で18園、814名分の定員が拡大され、7年連続で待機児童はゼロになりました。放課後児童クラブ（学童保育）は中央林間小に新たな施設が整備されたほか、学校との連携や防犯設備の充実などが行われました。また、こども広場と寺子屋の開催日を調整することにより放課後プログラムが平日は毎日実施されるようになりました。切れ目のない発達支援については保育園と小学校・放課後児童クラブとの連携が進展したほか、保育園と療育の一体的な提供を行うインクルーシブ保育園の設置を提案し実現に向けて動き出しているところです。一時預かりなどの多様な保育については新たな施設の整備により充実化が図られたほか、休日保育の利用が大幅に増えました。これらの子育て支援施策は私自身が専門とするところであり、今後も時代に合わせてニーズを的確に捉え、スピード感をもって政策実現を進めて参ります。

				h3.p-area-style__headline-main(data-scroll) まち

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 高齢者福祉
					p.p-area-style__lead 「健康で楽しく、安心して生活できるまちをめざします」
					ul.p-area-style__list
						li 医療と介護の連携強化
						li 共生型サービスの推進
						li 生活支援体制の整備
						li 居場所づくりと介護予防
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 医療と介護の連携としては合同研修会の開催などにより介護事業者が医療に繋がりやすくなったほか、新たな居場所としての大和健康都市大学はコロナの影響を受けつつも引き続き好評を博しています。一方、生活支援体制整備としての協議体の設置はこの4年間で1か所増えたのみでした。また、共生型サービスは実質的には提供する事業者が増えたものの指定を受けた事業者は少なく、課題となっています。高齢者向け施策としてはコロナ対策に追われていたこともあり、今期はあまり大きな成果を上げられませんでしたが、引き続き全国の先進事例などを積極的に取り入れるなど、超高齢社会への対応を進めて参ります。

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline まちづくり
					p.p-area-style__lead 「まちの価値を高め、持続可能で元気なまちをめざします」
					ul.p-area-style__list
						li 地域経済の振興
						li 空き家対策
						li 若者を増やす取り組み
						li 多文化共生の推進
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 多くの自治体が人口減となっている中でも大和市は選ばれるまちとなっており、2021年には人口が24万人を超えました。一方で、0～14歳の年少人口は着実に減少しているほか、地域によっては閉店したままの中小店舗も多くなってきました。空き家対策としては相談窓口の設置のほか、現地調査や所有者の調査、適正な管理に向けた指導、助言等が行われていますが管理不全の空き家は100棟を超えておりさらなる対応が必要です。コロナ禍で若者が集まるイベントや多文化理解のための交流などは行えず、あまり進展がありませんでした。今後は子育て世代を中心とした若年層を呼び込むための政策により力を入れ、消費拡大と地価の維持に努めると共に、賑わいと活気のあるまちを目指して参ります。

				h3.p-area-style__headline-main(data-scroll) その他の政策

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 環境・防災
					p.p-area-style__lead 「まちの環境を整え、市民の命を守ります」
					ul.p-area-style__list
						li 災害時の情報把握と迅速な伝達
						li 建物緑化
						li 公園の整備・活用
						li 環境保全と防災に有効な土地利用の推進
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 災害対策としてはドローンを活用した遠隔情報共有システムが導入されるなど、大規模災害時の情報把握への対策が進みました。一方で、情報の受け手側の課題解決はなかなか進んでいません。特にスマホを持たない人への情報伝達の在り方については、防災ラジオの購入助成などを訴えてきましたが、いまだに実現していません。環境対策については年々宅地化が進む中で緑の保全が引き続きの課題となっています。建物の屋上や壁面の緑化への補助について引き続き要望するほか、小規模な公園の整備・活用、特定生産緑地の活用と併せて今後も積極的に取り組んで参ります。

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 児童虐待防止
					p.p-area-style__lead 「子どもたちの心と命を守ります」
					ul.p-area-style__list
						li 児童相談所との連携・市内新設
						li 学校や関係諸機関との連携強化
						li ファミリーホームの設置
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text この4年間で「乳児揺さぶられ症候群防止」「産後うつ対策」など、特に産後ケアの分野での政策を多く実現することができましたが、実子2人を殺害した容疑で市内在住の母親が逮捕されるなど、残念ながら児童虐待は無くなっていません。また、この事件では家庭裁判所と児童相談所の対応が問題となり、関係機関の連携強化を訴えていた私にとっても痛恨の極みでした。児童相談所については、2021年に「大和綾瀬地域児童相談所」が藤沢市にある中央児童相談所敷地内に新設され、2025年度内に綾瀬市内に移転する予定です。市内への新設は叶いませんでしたが、機能強化にはつながることから、今後は機能を分散して一部を市内に誘致する形で働きかけを続けたいと考えています。ファミリーホーム設置については進展させることができませんでしたが諦めることなく、引き続き取り組んでいきたいと思います。

				.p-area-style__item(data-scroll)
					h4.p-area-style__headline 自殺ゼロ
					p.p-area-style__lead 「自殺ゼロの町、やまとを目指します」
					ul.p-area-style__list
						li 予防啓発活動の推進
						li 民間を含む関係諸機関との連携
						li ハイリスク層のケア
						li 命を大切にする学校教育
					.p-area-style__footer
						h5.p-area-style__headline-sub 成果とご報告
						p.p-area-style__text 2018年の大和市民の自殺者数は31人で、この20年で最小となりましたが、その後はまた少しずつ増えており、2021年は41人になってしまいました。コロナ禍により先行きの見えない不安が広がったり、人とのつながりが失われたりといったことにより、全国的にはコロナ禍で若い人の自殺が増える傾向がありましたが、大和市では30代～50代の方が多く亡くなっています。また、コロナ禍の行動規制によって行政側からのアプローチが難しくなったことも追い打ちをかける結果になったと考えられます。2023年度は次期の自殺総合対策計画の策定年度でもあることから、引き続き究極の目標である「自殺ゼロ」を目指して取り組みを続けて参ります。

