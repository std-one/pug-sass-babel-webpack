doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1")
		meta(name="format-detection" content="telephone=no")

		block param
		meta(name="description" content=description)
		meta(name="keywords" content=keywords)
		if pageTitle
			title #{pageTitle} | #{siteTitle}
		else
			title #{siteTitle}

		meta(property="og:type" content="website")
		meta(property="og:site_name" content="")
		meta(property="og:title" content=siteTitle)
		meta(property="og:description" content=description)
		meta(property="og:url" content="")
		meta(property="og:image" content="")
		meta(property="og:locale" content="ja_JP")
		meta(itemprop="name" content=siteTitle)
		meta(itemprop="description" content=description)
		meta(itemprop="image" content="")

		link(rel="shortcut icon" href="/favicon.ico")
		link(rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico")
		link(rel="apple-touch-icon" href="/apple-touch-icon.png")

		link(rel="stylesheet" href="/assets/css/style.css")

		block style
		script(src="/assets/js/bundle.js")

		block javascript

	body(id=bodyID)
		header.header
			.wrap
				if pageTitle
					p.header__logo HTML5サイト制作用雛形【ver. No.2019.05.29】
				else
					h1.header__logo HTML5サイト制作用雛形【ver. No.2019.05.29】

				nav.nav-utility
					ul
						li: a(href="xxx") よくある質問
						li: a(href="xxx") お問い合わせ
						li: a(href="xxx") サイトマップ

				nav.nav-global
					ul
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ

		main.main(role="main")
			block container
				.container
					.wrap
						block main-contents
							article.contents
								block contents

							.side
								block side

			p.pagetop.is-fixed: a(href="#") PAGETOP

		footer.footer
			.wrap
				.nav-footer
					ul
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ
						li: a(href="xxx") グローバルナビ

			p.copyright: small Copyright (c) 2017 &nbsp;hogehoge All Rights Reserved.